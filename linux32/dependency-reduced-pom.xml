<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>VideoHandler</artifactId>
    <groupId>io.github.mianalysis</groupId>
    <version>1.7.0</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>linux32</artifactId>
  <name>VideoHandler</name>
  <description>Video reading using JavaCV library</description>
  <url>https://github.com/mianalysis/videohandler</url>
  <issueManagement>
    <system>GitHub Issues</system>
    <url>https://github.com/mianalysis/videohandler/issues</url>
  </issueManagement>
  <ciManagement>
    <system>Travis</system>
    <url>https://travis-ci.org/</url>
  </ciManagement>
  <inceptionYear>2019</inceptionYear>
  <mailingLists>
    <mailingList>
      <name>Image.sc Forum</name>
      <archive>https://forum.image.sc/tag/modular-image-analysis</archive>
    </mailingList>
  </mailingLists>
  <developers>
    <developer>
      <id>sjcross</id>
      <name>Stephen Cross</name>
      <roles>
        <role>lead</role>
        <role>developer</role>
        <role>debugger</role>
        <role>reviewer</role>
        <role>support</role>
        <role>maintainer</role>
      </roles>
    </developer>
  </developers>
  <contributors>
    <contributor>
      <name>Stephen Cross</name>
      <roles>
        <role>founder</role>
      </roles>
      <properties>
        <id>sjcross</id>
      </properties>
    </contributor>
  </contributors>
  <licenses>
    <license>
      <name>GNU General Public License v3+</name>
      <url>http://www.gnu.org/licenses/gpl.html</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <scm>
    <connection>scm:git:git://github.com/mianalysis/videohandler</connection>
    <developerConnection>scm:git:git@github.com:SJCross/VideoHandler</developerConnection>
    <url>https://github.com/mianalysis/videohandler</url>
  </scm>
  <organization>
    <name>University of Bristol</name>
  </organization>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.6</version>
        <configuration>
          <finalName>Video_Handler-${project.artifactId}-${project.version}</finalName>
          <archive>
            <manifest>
              <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
              <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
              <mainClass>io.github.mianalysis.videohandler.VideoLoader</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <version>3.2.0</version>
        <executions>
          <execution>
            <id>copy-resources</id>
            <phase>package</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${basedir}/../target/</outputDirectory>
              <resources>
                <resource>
                  <directory>${basedir}/target/</directory>
                  <includes>**/Video_Handler-${project.artifactId}-${project.version}.jar</includes>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>io.github.mianalysis</groupId>
      <artifactId>mia-plugin</artifactId>
      <version>1.6.0</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>sc.fiji</groupId>
      <artifactId>Fiji_Plugins</artifactId>
      <version>3.1.3</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <properties>
    <genClass>system</genClass>
    <maven.compiler.target>1.8</maven.compiler.target>
    <scp>compile</scp>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <license.copyrightOwners>Stephen Cross</license.copyrightOwners>
    <dependency.locations.selected>false</dependency.locations.selected>
    <javacpp.platform.dependencies>linux-x86</javacpp.platform.dependencies>
    <maven.compiler.source>1.8</maven.compiler.source>
    <license.licenseName>GNU General Public License v3+</license.licenseName>
  </properties>
</project>
